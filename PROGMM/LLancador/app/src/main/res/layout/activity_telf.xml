<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="95dp"
        android:id="@+id/num"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        tools:style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Introdueix el nÃºmero "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_above="@+id/btn_trucar"
        android:layout_alignLeft="@+id/num"
        android:layout_alignStart="@+id/num" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_trucar"
        android:background="@android:color/holo_green_light"
        android:text="Trucar"
        android:layout_alignBottom="@+id/num"
        android:layout_toRightOf="@+id/num"
        android:layout_toEndOf="@+id/num"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

</RelativeLayout>